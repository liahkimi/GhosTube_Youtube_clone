extends base

block content  
    if errorMessage
        span=errorMessage
    form(method="POST") 
        input(placeholder="Username", name="username", type="text", required)
        input(placeholder="Password", name="password", type="password", required)
        input(type="submit", value="Login")
        br
        a(href="https://github.com/login/oauth/authorize?client_id=41c80202bd6ca8fe5414&allow_signup=false") Continue with GitHub &rarr;
    hr
    div     
        span Don't have an account?
        a(href="/login") Create one now &rarr;